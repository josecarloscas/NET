@model IEnumerable<WebApplication5.Models.TipoAplicacion>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Tipos de Aplicacion</h2>
        </div>
        <div class="col-6">
            <a asp-controller="TipoAplicacion" asp-action="Crear" class="btn btn-primary">Nuevo tipo Aplicacion</a>
        </div>
    </div>
    <br/>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Nombre
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                  <tr>
                      <th width="50%">@item.Nombre</th>
                      <th></th>
                  </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No hay registro de tipo de aplicacion</p>
    }
</div>

